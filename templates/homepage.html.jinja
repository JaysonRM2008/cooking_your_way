<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>HomePage</title>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Navbar -->
  {% include "components/navbar.html.jinja" %}

  <!-- Floating Buttons (Top Right) -->
  <div class="fixed top-4 right-4 flex space-x-4 z-50">
    {% if not user %}
      <!-- Show if user is NOT logged in -->
      <a href="/login"
         class="px-5 py-2 rounded-full border-2 border-blue-500 text-blue-500 font-bold hover:bg-blue-50 transition">
          Login
      </a>

      <a href="/register"
         class="px-5 py-2 rounded-full bg-blue-600 text-white font-bold hover:bg-blue-700 transition">
          Register
      </a>
    {% else %}
      <!-- Show if user IS logged in -->
      <a href="/user"
         class="flex items-center space-x-2 px-5 py-2 rounded-full bg-gray-800 text-white font-bold hover:bg-gray-900 transition">
          <!-- User Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A9 9 0 1119.879 17.8 9 9 0 015.12 17.804z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 11a4 4 0 100-8 4 4 0 000 8z" />
          </svg>
          <span>{{ user['Name'] }}</span>
      </a>
    {% endif %}
  </div>

  <!-- Page Content -->
  <div class="pt-24 px-4 flex flex-col items-center">
    
    <!-- Welcome Message -->
    <h1 class="text-3xl font-bold underline text-gray-800 mb-6 text-center">
      Welcome to the Homepage
    </h1>

    <p class="text-center text-gray-700 text-lg mb-8">
      Browse our premium recipes, products, and culinary tips.
    </p>

    <!-- Search Bar (Below Text) -->
    <form action="/browse" method="GET" class="w-full max-w-md">
      <div class="flex">
        <input type="text" name="q" placeholder="Search for products..."
               class="flex-grow p-3 rounded-l-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 transition"/>
        <button type="submit"
                class="bg-blue-600 text-white px-5 rounded-r-xl font-semibold hover:bg-blue-700 transition">
          Search
        </button>
      </div>
    </form>

  </div>

</body>
</html>
