<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>HomePage</title>
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- Navbar (Left Sidebar) -->
  {% include "components/navbar.html.jinja" %}
<!-- Page Content (pushed right of navbar) -->
<div class="ml-64 flex justify-center my-8">

  <div class="relative w-full max-w-4xl">

    <!-- Overlay text -->
    <div class="absolute inset-0 flex flex-col items-center justify-center text-center z-10">
      <h1 class="text-4xl font-extrabold underline text-white mb-4 drop-shadow-lg">
        Welcome to the Homepage
      </h1>
      <p class="text-lg font-semibold text-white max-w-2xl drop-shadow-md">
        Browse our premium recipes, products, and culinary tips.
      </p>
    </div>

    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/40 rounded-xl"></div>

    <!-- GIF -->
    <img
      src="/static/product/2620043-uhd_3840_2160_25fps-ezgif.com-speed.gif"
      class="w-full max-h-[400px] object-cover rounded-xl shadow-lg border-2 border-gray-300"
      alt="Homepage Promo"
    >

  </div>

</div>



</div>

    <!-- Floating Cart Button (Top Right) -->
    <div class="fixed top-4 right-4 z-50">
      <a href="/cart"
         class="flex items-center space-x-2 px-5 py-3 rounded-full bg-yellow-500 text-white font-bold hover:bg-yellow-600 shadow-lg transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.5 7h13L17 13M6 21h.01M18 21h.01" />
        </svg>
        <span>Cart</span>
      </a>
    </div>



  </div>

</body>
</html>
