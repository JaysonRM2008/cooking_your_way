<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
{% include "components/navbar.html.jinja" %}

<h1> {{ product['Name'] }} </h1>

<div class="max-w-4xl mx-auto p-6 mb-5">
    <img class="h-96 mx-auto mt-10" src="{{ product['Image']}}" >
    <div class="text-2xl font-bold mt-5"> ${{ product['Price'] }} </div>
    <div class="mt-4"> {{ product['Description'] }} </div>
    
<!-- Floating Add to Cart Button (Right-Middle, Fully Rounded) -->
<div class="fixed right-4 top-1/2 transform -translate-y-1/2 z-50">
  <a href=""
     class="flex items-center space-x-2 bg-yellow-500 text-white font-bold px-5 py-3 rounded-full shadow-lg hover:bg-yellow-600 transition transform hover:scale-105">
    
    <!-- Cart Icon -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.5 7h13L17 13M6 21h.01M18 21h.01" />
    </svg>

    <span>Add to Cart</span>
  </a>
</div>

  </body>
</html>