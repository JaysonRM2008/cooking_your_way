<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Browse</title>
  </head>

  <body class="bg-gray-100 min-h-screen">

    {% include "components/navbar.html.jinja" %}

    <h1 class="text-3xl font-bold text-black text-center mt-24 mb-8">
      Browse Page
    </h1>

    <!-- Product List -->
    <main class="max-w-4xl mx-auto p-6 space-y-6">

      {% for x in products %}
      <a href="/product/{{ x['ID'] }}"
         class="flex items-center gap-6 bg-white p-4 rounded-lg shadow hover:shadow-md transition">

        <!-- Image (FIXED, RESPONSIVE) -->
        <div class="w-32 h-32 flex items-center justify-center overflow-hidden">
          <img
            src="{{ x['Image'] }}"
            alt="{{ x['Name'] }}"
            class="max-w-full max-h-full object-contain"
          >
        </div>

        <!-- Product Info -->
        <div class="flex-1">
          <div class="text-lg font-semibold text-gray-800">
            {{ x["Name"] }}
          </div>

          <div class="text-gray-700 font-bold mt-1">
            ${{ x["Price"] }}
          </div>
        </div>

      </a>
      {% endfor %}

    </main>

  </body>
</html>
