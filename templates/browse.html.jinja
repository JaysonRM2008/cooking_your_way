<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
{% include "components/navbar.html.jinja" %}


    <h1 class="text-3xl font-bold text-black-">
      Browse Page
    </h1>

    {# grid of proucts with 4 columns, and centered on page.#}
    <main class=" grid grid-cols-4 gap-3 max-w-4xl mx-auto p-6 mb-5">

    {% for x in products %}

    {# use grid to be rigid layout#}
    <a href="/product/{{ x['ID'] }}" class="gird"> 

    {#set height of image, and use mx-auto to center #}
        <img class="h-54 mx-auto mt-45" src="{{ x['Image']}}" > 

        <div> {{x["Name"]}} </div>

        <div class="text-right font-bold text-sm"> ${{x["Price"]}} </div>


    </a>
 {% endfor %}
 

    </main>
  </body>
</html>